


<header>
    <div id="header">
      <h1><%= link_to image_tag("logo.png", alt: ""), 'home' %></h1>
    </div>
  <br/><br/>
  <nav>
    <ul>
      <li><%= link_to "Home", home_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Advertise", advertise_path %></li>

      <li>
        <a href= "#">Products <span class="caret"></span></a>
        <div>
          <ul>
            <li><%= link_to "Smartphones", smartphones_path%></li>
            <li><%= link_to "LCDs", lcds_path%></li>
            <li><%= link_to "Consoles", consoles_path%></li>
          </ul>
        </div>
      </li>
  

      <% if signed_in? %>
        <% if current_user.admin? %>
          <li>
            <li><a href="">Administrative Tools</a>
              <div>
                <ul>
                 <li><%= link_to "Add Product", newproduct_path %></li>
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Edit User", edit_user_path(current_user) %></li>
                  <li><%= link_to "Logout", logout_path, method: "delete" %></li>

                </ul>
              </div>
        <% elsif current_user.storeOwner? %>
          <li>
          <li><%= link_to "Add Price", prices_path %></li>

            <li><a href="">Account <span class="caret"></span></a>
            <div>
                <ul>
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "New Store", newstore_path %></li>
                  <li><%= link_to "Edit User", edit_user_path(current_user) %></li>
                  <li><%= link_to "Logout", logout_path, method: "delete" %></li>
                </ul>
              </div>
            </li>
          </li>

      <% else %>
        <li>
           <li><a href="">Account <span class="caret"></span></a>
          <div>
            <ul>
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Edit User", edit_user_path(current_user) %></li>
            <li><%= link_to "Logout", logout_path, method: "delete" %></li>
            </ul>
          </div>
        </li>
      <% end %>


      <% else %>
        <li><%= link_to "Login", login_path %></li>
      <% end %>
  
      <li>  
        <% if !signed_in? %>
        <%= link_to "Sign Up", signup_path %>
        <%end %>
      </li>

       <li>
        <%= form_tag products_path, :method => 'get', id:"searchBar", placeholder:"Search" do %>
          <%= search_field_tag :search, params[:search] %>
        <% end %>
      </li>  
    

    </ul>
  </nav>
</header>